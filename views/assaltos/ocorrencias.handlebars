<h1 class="container text-center">Ocorrências registradas</h1>
<div class="container table-responsive">
    <table class="table table-striped
    table-hover	
    table-borderless
    table-dark
    align-middle">
        <thead class="table-dark">
            <caption>Table Name</caption>
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Local</th>
                <th>Data e Hora</th>
                <th>Mapa</th>
            </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each ocorrencias}}
                    <tr class="table-primary">
                        <td scope="row">{{nome}}</td>
                        <td>{{cpf}}</td>
                        <td>{{local}}</td>
                        <td>{{data}}</td>
                        <td><a href="/assaltos/local/{{id}}">Visualizar</a></td>
                    </tr>
                {{else}}
                    <h3>Nenhuma ocorrência registrada ainda no sistema...</h3>
                {{/each}}
            </tbody>
            <tfoot>
                
            </tfoot>
    </table>
</div>
<div class="container">
    <a name="nova-ocorrencia" id="nova-ocorrencia" class="btn btn-success" href="/assaltos/mapa" role="button">Nova Ocorrência</a>    
</div>
